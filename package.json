{
    "name": "@avalabs/fast-abi",
    "version": "1.0.0",
    "description": "",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "license": "MIT",
    "dependencies": {
        "@mapbox/node-pre-gyp": "^1.0.10",
        "cargo-cp-artifact": "^0.1.7",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "build": "yarn build:ts && yarn build:rs:release",
        "build:ts": "tsc -b",
        "build:rs": "cargo build --message-format=json-render-diagnostics && mkdir -p bin && mv index.node bin/",
        "build:rs:release": "cargo build --release --message-format=json-render-diagnostics && mkdir -p bin && mv index.node bin/",
        "install": "node-pre-gyp install --fallback-to-build=false || yarn build:rs:release",
        "test": "jest",
        "watch": "tsc -w -p tsconfig.json",
        "package": "node-pre-gyp package",
        "upload-binary": "yarn build && yarn package && yarn node-pre-gyp-github publish",
        "prepack": "shx rm -rf bin"
    },
    "devDependencies": {
        "@mathquis/node-pre-gyp-github": "1.0.1",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^5.2.7",
        "@types/node": "12.12.54",
        "chai": "^4.0.1",
        "chai-as-promised": "^7.1.0",
        "chai-bignumber": "^3.0.0",
        "ethereum-types": "^3.4.1",
        "jest": "^30.1.3",
        "jest-util": "^30.0.5",
        "mocha": "^6.2.0",
        "shx": "^0.3.3",
        "ts-jest": "^29.4.4",
        "tslint": "5.11.0",
        "typescript": "5.6.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ava-labs/fast-abi.git"
    },
    "files": [
        "lib",
        "binding.gyp",
        "build.rs",
        "src",
        "Cargo.toml",
        "Cargo.lock"
    ],
    "binary": {
        "module_name": "index",
        "host": "https://github.com/ava-labs/fast-abi/releases/download/",
        "remote_path": "{version}",
        "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
        "module_path": "bin",
        "pkg_path": "."
    }
}
